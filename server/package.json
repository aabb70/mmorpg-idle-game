{
  "name": "mmorpg-idle-server",
  "version": "1.0.1",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npx prisma generate",
    "start": "(npx prisma db push --accept-data-loss --skip-generate || echo 'Database sync failed, starting server anyway') && node dist/index.js",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:deploy": "prisma db push && npx tsx prisma/seed.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "typescript": "^5.2.2",
    "prisma": "^5.7.1"
  },
  "devDependencies": {
    "tsx": "^4.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}